{
  "version": 2,
  "buildCommand": "npm install",
  "functions": {
    "api/send-sms.js": {
      "maxDuration": 10
    },
    "api/webhook-incoming.js": {
      "maxDuration": 10
    },
    "api/get-messages.js": {
      "maxDuration": 10
    },
    "api/test-supabase.js": {
      "maxDuration": 10
    },
    "api/mark-read.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/webhook-incoming",
      "destination": "/api/webhook-incoming.js"
    },
    {
      "source": "/api/get-messages",
      "destination": "/api/get-messages.js"
    },
    {
      "source": "/api/send-sms",
      "destination": "/api/send-sms.js"
    },
    {
      "source": "/api/test-supabase",
      "destination": "/api/test-supabase.js"
    },
    {
      "source": "/api/mark-read",
      "destination": "/api/mark-read.js"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}
