{
  "version": 2,
  "buildCommand": "npm install",
  "installCommand": "npm install",
  "functions": {
    "api/send-sms.js": {
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    },
    "api/webhook-incoming.js": {
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    },
    "api/get-messages.js": {
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
